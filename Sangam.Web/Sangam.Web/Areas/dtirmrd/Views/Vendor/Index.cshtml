@model Sangam.Core.Model.VendorModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var MaterialType = new List<SelectListItem> { new SelectListItem { Text = "Milk", Value = "1" } };

}
@using (Html.BeginForm("InsertVendor", "Vendor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="panel panel">
        <div class="panel-heading">
            OTHER VENDERS
        </div>
        &nbsp;
        <div class="panel-body">
            <div class="col-sm-6">
                <div class="input-group">
                    <div class="input-group-addon">
                        Date & Time:
                    </div>
                    @Html.TextBoxFor(model => model.DateTime, new { @class = "form-control", @Value = @DateTime.Now, required = "required" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="input-group">
                    <div class="input-group-addon">
                        Vender Code
                    </div>
                    @Html.TextBoxFor(model => model.VendorCode, new { @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="col-sm-6">
                Vender Name/Party Name
                @Html.TextBoxFor(model => model.VendorName, new { @class = "form-control", required = "required" })
            </div>


            <div class="col-sm-6">
                Vender Short Name:
                @Html.TextBoxFor(model => model.VendorShortName, new { @class = "form-control", required = "required" })
            </div>

            <div class="col-sm-6">
                Address:
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", required = "required" })
            </div>
            <div class="col-sm-6">
                TIN:
                @Html.TextBoxFor(model => model.Tin, new { @class = "form-control", required = "required" })
            </div>

            <div class="col-sm-6">
                PAN:
                @Html.TextBoxFor(model => model.Pan, new { @class = "form-control", required = "required" })
            </div>
            <div class="col-sm-6">
                Phone Number:
                @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control", required = "required" })
            </div>

            <div class="col-sm-6">
                Contact Person:
                @Html.TextBoxFor(model => model.ContactPerson, new { @class = "form-control", required = "required" })
            </div>
            <div class="col-sm-6">
                Authorized Person:
                @Html.TextBoxFor(model => model.AuthorizedPerson, new { @class = "form-control", required = "required" })
            </div>

            <div class="col-sm-6">
                Alert Numbers:
                @Html.TextBoxFor(model => model.AlertNo, new { @class = "form-control", required = "required" })
            </div>
            <div class="col-sm-6">
                E-mail Address:
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })
            </div>

            <div class="col-sm-6">
                Material:
                @Html.DropDownListFor(model => model.Material, MaterialType, new { @class = "form-control", required = "required" })
            </div>
            <div class="col-sm-6" style="padding-top: 22px;">
                Active
                @Html.CheckBoxFor(model => model.Status, new { required = "required" })
            </div>

            <div class="col-sm-12">
                Reference
                @Html.TextBoxFor(model => model.Reference, new { @class = "form-control", required = "required" })

            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    Remarks
                    @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group" style="text-align: right;">
                    <a href="/Quality/QualityDashBoard/Index" class="btn btn-default">Cancel</a>
                    <input type="submit" class="btn btn-default" value="Submit" />
                </div>
            </div>
        </div>
    </div>
}