<div class="panel panel-default">
    <div class="panel-heading">
        RMRD - DASHBOARD
    </div>
    <hr />
    <div class="panel panel-body">
        <div class="col-sm-4">
            <div class="input-group">
                <div class="input-group-addon">

                    Date & Time:
                    @DateTime.Now
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="input-group">
                <div class="input-group-addon">

                    Shift : AM
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="input-group">
                <div class="input-group-addon">
                    Welcome Person Name
                </div>
            </div>
        </div>

        <hr />

        <div class="col-sm-6 col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DIRECT ROUTE'S
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                        <th>
                            Route Name
                        </th>
                        <th>
                            Arrival. Time
                        </th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>&nbsp;</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    TANKERS'S
                </div>
                <div class="panel-body">
                    <table class="table table-bordered" style="overflow:auto; height:150px;">
                        <thead>
                        <th>
                            #
                        </th>
                        <th>
                            Arrival. Time
                        </th>
                        </thead>

                        
                        @foreach (var item in Model)
                        {

                            <tbody>
                                <tr>
                                    <td>
                                        @item.RefNo
                                        @*<a href="/users/Create/@item.RefNo" target="_blank">
                                                @item.RefNo
                                            </a>*@
                                    </td>
                                    <td>
                                        @item.DateTime &nbsp;<span class="badge">@item.QCStatus</span>

                                    </td>

                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    UNLOADINGS TANKERS
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                        <th>
                            #
                        </th>
                        <th>
                            Start. Time
                        </th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    &nbsp;
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    &nbsp;
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    &nbsp;
                                </td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="col-sm-6 col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    CURD/SOUR DETAILS
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                        <th>
                            Center Name
                        </th>
                        <th>
                            Type
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Enter Time
                        </th>
                        <th>
                            Estimated Time
                        </th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    &nbsp;
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    &nbsp;
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>